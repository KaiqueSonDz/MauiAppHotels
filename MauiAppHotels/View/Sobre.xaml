<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotels.View.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Darkred}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         Margin="5"
                         Spacing="10">

        <Label Text="Sobre o App"
               HorizontalTextAlignment="Center"
               FontSize="50"
               FontFamily="Fjalla"
               TextColor="{StaticResource Cyan}"
               Padding="10"/>

        <Image Source="dev.png"
               Aspect="AspectFit"/>

        <Frame>
            <Label Text="Aplicativo desenvolvido para aumentar o conhecimento nas aplicações de .NETMAUI.
                   Esta aplicação representa uma atividade da Agenda 13 da materia de DS do curso de Desenvolvimento de Sistemas"
                   />
        </Frame>
        <Frame>
            <Label Text="Desenvolvido por: Kaique Rampazzo Bini
                         Data do Desenvolvimento: 16/05/2025
                         Turma EHO - DS II"
                   />
        </Frame>

        <Button Text="Voltar"
                Clicked="Button_Clicked"
                BackgroundColor="{StaticResource Cyan}"
                HorizontalOptions="End"/>

    </VerticalStackLayout>
</ContentPage>